  //http://eslint.org/docs/rules/
{
  "root": true, //root only file applied to our files.
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },

  "rules": { //[0 off, 1 Warning, 2 Error]
    "no-console": 1,
    "no-alert": 1,
    "no-eval": 1
  }
}
